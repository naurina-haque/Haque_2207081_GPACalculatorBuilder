<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: pink;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpacalcbuilder.ResultController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text=" GPA Calculation Result">
        <font>
            <Font size="32.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label fx:id="gpaLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="Overall GPA: --" />
        <Label fx:id="creditLabel" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="Total Credits: --" />
    </VBox>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Course Details:" />

    <TableView fx:id="resultTable" prefHeight="300.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="courseNameColumn" prefWidth="150.0" text="Course Name" />
            <TableColumn fx:id="courseCodeColumn" prefWidth="100.0" text="Course Code" />
            <TableColumn fx:id="teacher1Column" prefWidth="120.0" text="Credit" />
            <TableColumn fx:id="teacher2Column" prefWidth="120.0" text="Teacher 1" />
            <TableColumn fx:id="creditColumn" prefWidth="96.0" text="Teacher 2" />
            <TableColumn fx:id="gradeColumn" prefWidth="113.0" text="Grade" />
        </columns>
    </TableView>
</VBox>
